<form role="form" class="form-signup" method="post" action="/register">
    <label for="PLAYER_HANDLE" class="sr-only">Handle</label>
    <input type="text" class="form-control" id="PLAYER_HANDLE" name="handle" placeholder="Handle" autofocus required>

    <label for="PLAYER_EMAIL" class="sr-only">Email</label>
    <input type="email" class="form-control" id="PLAYER_EMAIL" name="email" placeholder="Email" required>

    <label for="PLAYER_PASSWORD" class="sr-only">Password</label>
    <input type="password" class="form-control" id="PLAYER_PASSWORD" name="password" placeholder="Password" required>

    <label for="PLAYER_PASSWORD2" class="sr-only">Password2</label>
    <input type="password" class="form-control" id="PLAYER_PASSWORD2" name="password2" placeholder="Re-type password" required>
    
    <button type="submit" class="btn btn-lg btn-default btn-block">Register</button>
</form>
<p class="text-center">Already a member? login <a href="/login">here</a></p>
